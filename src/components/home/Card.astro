---
const { title, description, image, link } = Astro.props
---

<li class="list-item card">
    <div class="card-image-wrapper">
        <img class="card-image" src={image} alt="template">
    </div>
    <div class="card-body">
        <h3>{title}</h3>
        <p>{description}</p>
        <a href={link}>View details</a>
    </div>
</li>

<style>
.card {
    background: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    border: 1px solid #f0f0f0;
    border-radius: 1.2rem;
    overflow: hidden;
    
    .card-image-wrapper {
        width: 100%;
        height: 14rem;
        overflow: hidden;
    }
    .card-image {
        width:100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.3s ease-in-out;
    }
    .card-image:hover {
        transform: scale(1.1);
    }
    .card-body {
        padding: 1rem;
        padding-bottom: 1.5rem;
        h3 {
            margin-top: 0;
            margin-bottom: 0.5rem;
        }
        a {
            display: block;
            margin-top: 1rem;
            color: purple;
        }
    }
}
</style>